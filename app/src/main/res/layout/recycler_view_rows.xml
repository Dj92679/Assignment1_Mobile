<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/patientNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/P_FName">

    </TextView>

    <TextView
        android:id="@+id/patientAgeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/P_Age"
        android:layout_centerHorizontal="true">

    </TextView>

    <TextView
        android:id="@+id/patientGenderView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/P_Gender"
        android:layout_marginLeft="310dp">

    </TextView>

    <TextView
        android:id="@+id/patientIncidentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/P_Incident"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">
        
    </TextView>


</RelativeLayout>